<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">   
    <navigation-rule>
        <from-view-id>/view/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>erro</from-outcome>
            <to-view-id>/view/erro.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/view/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- Arquivo de Propriedades: Internacionalização -->
    <application>
        <resource-bundle>
            <base-name>Mensagens.mensagens</base-name>
            <var>mensagem</var>
        </resource-bundle>
        
        <locale-config>
            <default-locale>pt_BR</default-locale>
            <supported-locale>en_US</supported-locale>
            <supported-locale>pt_BR</supported-locale>
        </locale-config>
        
        <message-bundle>Mensagens.mensagens</message-bundle>
    </application>
</faces-config>
